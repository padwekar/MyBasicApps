<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
    android:text="Contact Id"
    android:id="@+id/lbl_contactid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="60dp"/>

    <TextView
        android:text="Contact Id"
        android:id="@+id/textview_contactid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lbl_contactid"

        />

    <TextView
        android:text="Name                        "
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_contactid"/>
    <TextView
        android:text="Name"
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_contactid"
        android:layout_toRightOf="@id/lbl_contactid"
        />

    <TextView
        android:text="Landline Number"
        android:id="@+id/lbl_landline_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_name"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="Landline Number"
        android:id="@+id/textview_landline_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_name"
        android:layout_toRightOf="@id/lbl_contactid"/>

    <TextView
        android:text="Mobile Number"
        android:id="@+id/lbl_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_landline_number"
        />
    <TextView
        android:text="Mobile Number"
        android:id="@+id/textview_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_landline_number"
        android:layout_toRightOf="@id/lbl_contactid"/>

    <TextView
        android:text="Email ID"
        android:id="@+id/lbl_emailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_mobile_number"/>

    <TextView
        android:text="Email ID"
        android:id="@+id/textview_emailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_mobile_number"
        android:layout_toRightOf="@id/lbl_contactid"/>

    <TextView
        android:text="Remark"
        android:id="@+id/lbl_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_emailId"/>

    <TextView
        android:text="Remark"
        android:id="@+id/textview_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_emailId"
        android:layout_toRightOf="@id/lbl_contactid"/>


    <TextView
        android:text="City"
        android:id="@+id/lbl_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_remark"/>

    <TextView
        android:text="City"
        android:id="@+id/textview_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lbl_contactid"
        android:layout_below="@id/lbl_remark"/>
</RelativeLayout>